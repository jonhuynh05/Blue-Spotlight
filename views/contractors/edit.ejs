<%- include("../partials/header.ejs") %>
<div class="container-fluid">
<%- include("../partials/navbar.ejs") %>
    <div class="edit-profile-container">
        <div class="background-layer">
            <form class="edit-form" id="edit-form" action="/contractors/<%=contractor._id%>?_method=PUT" method="POST">
                <h1>Edit Profile</h1>
                Name:<input type="text" name="name" value="<%=contractor.name%>"/><br/>
                Username:<input type="text" name="username" value="<%=contractor.username%>" pattern="[^' ']+" placeholder="no spaces"/><br/>
                Profile Photo URL:<input type="text" name="profileURL" value="<%=contractor.profileURL%>"/><br/>
                Email:<input type="text" name="email" value="<%=contractor.email%>" pattern="[^' ']+" placeholder="no spaces"/><br/>
                New Password:<input type="text" name="password"/><br/>
                Phone Number:<input type="tel" name="phoneNumber" pattern="[(][0-9]{3}[)][ ][0-9]{3}-[0-9]{4}" placeholder="(xxx) xxx-xxxx" value="<%=contractor.phoneNumber%>"/><br/>
                <button type="submit">Submit</button><br/>
                <%= duplicate %>
            </form>
            <form class="edit-form" action="/contractors/<%=contractor._id%>?_method=DELETE" method="POST">
                <button class="delete-button" type="submit">Delete Account</button>
            </form>
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") %>