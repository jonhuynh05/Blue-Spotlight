<%- include("../partials/header.ejs") %>
<div class="container-fluid">
<%- include("../partials/navbar.ejs") %>
    <div class="profile-container">
        <div class="row" id="name-container">
            <h1 id="welcome-header">Hello, <%=reviewer.name%>. </h1>
        </div>
        <div class="row" id="stats-container">
            <p><%=reviewer.rating%></p>
        </div>
        <div class="row" id="edit-button-container">
            <div class="edit-anchor-container">
                <a href="/reviewers/<%=reviewer._id%>/edit" class="anchor-button" id="edit-button">Edit Profile</a>
            </div>
        </div>
        <div class="row" id="see-reviews-container">
            <div class="edit-anchor-container" id="see-reviews-anchor-container">
                <a href="/reviewers/<%=reviewer._id%>/written-reviews" id="see-reviews-anchor">Your Submitted Reviews</a>
            </div>
        </div>
    </div>
    <div class="row" id="review-button-container">
        <div id="review-anchor-container">
            <a href="/reviews" id="review-button">Find Contractors</a>
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") %>