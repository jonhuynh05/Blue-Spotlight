<%- include("../partials/header.ejs") %>
<div class="container-fluid">
<%- include("../partials/navbar.ejs") %>
<%if(reviewer.writtenReviews.length > 0){%>
    <div class="row" id="name-container">
        <h1 id="your-reviews-header">Your Reviews</h1>
    </div>
    <div>
        <div class="row" id="review-stream-container">
            <%for (let i = 0; i < reviewer.writtenReviews.length; i++){%>
                <div class="col-6">
                    <div class="review-subject-box">
                        <a class="subject-anchor" href="/reviews/contractors/<%=reviewSubject[i]._id%>">
                            <%=foundReviews[i].subjectName%>
                        </a>
                    </div>
                    <div class="row">
                        <%if(reviewSubject[i].profileURL === ""){%>
                            <div class="" id="">
                            </div>
                        <%} else{%>
                            <div class="profile-photo" id="contractor-profile-photo" style="background-image: url(<%=reviewSubject[i].profileURL%>);">
                                <a id="profile-photo-link" href="/reviews/contractors/<%=reviewSubject[i]._id%>"></a>
                            </div>
                        <%}%>
                    </div>
                    <div class="review-rating-box" id="user-review-stream-rating-box">
                        Rating: <%=foundReviews[i].rating%>/5<br/>
                    </div>
                    <div class="row">
                        <div class="review-description-box">
                            <%=foundReviews[i].description%><br/>
                        </div>
                    </div>
                    <div class="row" id="contractor-edit-review-button-container">
                        <div class="edit-anchor-container" id="write-review-stream-edit-container">   
                            <a href="/reviewers/<%=reviewer._id%>/written-reviews/edit/<%=foundReviews[i]._id%>" class="edit-button" id="edit-review-anchor">Edit Review</a>
                        </div>
                    </div>
                </div>
            <%}%>
        </div>
    </div>
    <div class="row" id="review-button-container">
        <div id="review-anchor-container">
            <a href="/reviews" id="review-button">Find Contractors</a>
        </div>
    </div>
    <%} else{%>
    <div class="row" id="name-container">
        <h1 id="your-reviews-header">Your Reviews</h1>
    </div>
    <div class="row" id="no-reviews">
        <div class="no-reviews">
            You do not have reviews yet! Start by looking for your contractor.
        </div>
    </div>
    <div class="row" id="review-button-container">
        <div id="review-anchor-container">
            <a href="/reviews" id="review-button">Find Contractors</a>
        </div>
    </div>
    <%}%>
</div>

<%- include("../partials/footer.ejs") %>