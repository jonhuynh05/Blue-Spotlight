<%- include("../partials/header.ejs") %>
<div class="container-fluid">
<%- include("../partials/navbar.ejs") %>
    <div class="edit-profile-container">
        <div class="background-layer">
            <form class="edit-form" id="edit-form" action="/reviewers/<%=reviewer._id%>?_method=PUT" method="POST">
                <h1>Edit Profile</h1>
                Name:<input type="text" name="name" value="<%=reviewer.name%>"/><br/>
                Username:<input type="text" name="username" value="<%=reviewer.username%>"/><br/>
                Email:<input type="text" name="email" value="<%=reviewer.email%>"/><br/>
                New Password:<input type="text" name="password"/><br/>
                <button type="submit">Submit</button>
                <%= duplicate %>
            </form>
            <form class="edit-form" action="/reviewers/<%=reviewer._id%>?_method=DELETE" method="POST">
                <button class="delete-button" type="submit">Delete Account</button>
            </form>
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") %>