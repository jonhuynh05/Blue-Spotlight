<%- include("../partials/header.ejs") %>
<div class="container-fluid">
    <a href="/" class="home-link">Contractor Ratings</a>
    <h1>Edit Profile</h1>
    <form id="edit-form" action="/reviewers/edit?_method=PUT" method="POST">
        Name:<input type="text" name="name" value="<%=reviewer.name%>"/>
        Username:<input type="text" name="username" value="<%=reviewer.username%>"/>
        Email:<input type="text" name="email" value="<%=reviewer.email%>"/>
        New Password:<input type="text" name="password"/>
        <button type="submit">Submit</button>
        <%= duplicate %>
    </form>
    <form action="/reviewers/<%=reviewer._id%>?_method=DELETE" method="POST">
        <button class="delete-button" type="submit">Delete Account</button>
    </form>
</div>
<%- include("../partials/footer.ejs") %>